import { defineConfig } from 'vite';
import laravel from 'laravel-vite-plugin';
import react from '@vitejs/plugin-react';
import { VitePWA } from 'vite-plugin-pwa';

export default defineConfig({
    plugins: [
        laravel({
            input: 'resources/js/app.jsx',
            refresh: true,
        }),
        react(),
        VitePWA({
            registerType: 'autoUpdate',
            injectRegister: null, // <--- DESACTIVAMOS LA INYECCIÓN AUTOMÁTICA
            includeAssets: ['favicon.ico', 'apple-touch-icon.png', 'masked-icon.svg'],
            manifest: {
                name: 'HPOS 360 Ruta',
                short_name: 'HPOS Ruta',
                description: 'Módulo de Venta en Ruta HPOS 360',
                theme_color: '#ffffff',
                background_color: '#ffffff',
                display: 'standalone',
                scope: '/',
                start_url: '/pwa/ruta-entrega',
                icons: [
                    {
                        src: '/android-chrome-192x192.png',
                        sizes: '192x192',
                        type: 'image/png'
                    },
                    {
                        src: '/android-chrome-512x512.png',
                        sizes: '512x512',
                        type: 'image/png'
                    }
                ]
            },
            workbox: {
                // Limpieza automática de cachés viejas
                cleanupOutdatedCaches: true,
                runtimeCaching: [{
                    urlPattern: ({ url }) => url.pathname.startsWith('/pwa/sync'),
                    handler: 'NetworkFirst',
                    options: {
                        cacheName: 'api-data-cache',
                        expiration: {
                            maxEntries: 50,
                            maxAgeSeconds: 60 * 60 * 24 // 1 día
                        },
                        networkTimeoutSeconds: 10 // Timeout rápido para fallback
                    },
                }]
            }
        })
    ],
});